# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8

[**.js]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true

[**.json]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[**.{html,tpl}]
end_of_line = lf
trim_trailing_whitespace = true

[**.scss]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true



